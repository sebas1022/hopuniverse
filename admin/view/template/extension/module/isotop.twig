{{ header }}{{ column_left }}
<div id="content">
   <div class="page-header">
      <div class="container-fluid">
         <div class="pull-right">
		  <button type="submit" form="form-isotop" id="save_stay" name="save_stay" value="1" class="btn btn-success"><i class="fa fa-check"></i> Save and stay</button>
            <button type="submit" form="form-isotop" data-toggle="tooltip" title="Save" class="btn btn-primary"><i class="fa fa-save"></i></button>
            <a href="{{ cancel }}" data-toggle="tooltip" title="Cancel" class="btn btn-default"><i class="fa fa-reply"></i></a>
         </div>
         <h1>{{ heading_title1 }}</h1>
         <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endfor %}
         </ul>
      </div>
   </div>
   <div class="container-fluid">
      {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
         <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %}
      {% if success %}
      <div class="alert alert-success"><i class="fa fa-check-circle"></i> Success
         <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %}
      <div class="panel panel-default">
         <div class="panel-body">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-isotop" class="form-horizontal">
            <div class="panel panel-default">
            <div class="panel-body">
               <div class="tab-content">
                
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Custom links in menu</label>
                                    {% set url_row = 0 %}
                                    <div class="col-sm-10">
                                       <div id="menu-url">
                                          {% for url in isotop_url %}
                                          <div id="url-row{{ url_row }}" class="form-group">
                                             <div class="col-sm-5">
                                                {% for language in languages %}
                                                <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> Text</span>
                                                   <input type="text" name="isotop_url[{{ url_row }}][name][{{ language.language_id }}]" value="{{ isotop_url[url_row] ? isotop_url[url_row].name[language.language_id] }}" placeholder="{{ entry_name }}" class="form-control" />
                                                </div>
                                                {% endfor %}
                                             </div>
                                             <div class="col-sm-5">
                                                {% for language in languages %}
                                                <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> Link</span>
                                                   <input type="text" name="isotop_url[{{ url_row }}][url][{{ language.language_id }}]" value="{{ isotop_url[url_row] ? isotop_url[url_row].url[language.language_id] : '' }}" placeholder="{{ entry_url }}" class="form-control" />
                                                </div>
                                                {% endfor %}
                                             </div>
                                             <div class="col-sm-2">
                                                <div class="text-left"><button type="button" onclick="$('#url-row{{ url_row }}').remove();" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></div>
                                             </div>
                                             {% if error_isotop_url.url_row %}
                                             <div class="col-sm-10">
                                                <div class="text-danger">{{ error_empty }}</div>
                                             </div>
                                             {% endif %}
                                          </div>
                                          {% set url_row = url_row + 1 %}
                                          {% endfor %}
                                       </div>
                                       <button type="button" onclick="addUrlMenu();" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button>
                                    </div>
                                 </div>
                               
               </div>
			   </div>
			   </div>
            </form>
         </div>
      </div>
   </div>
</div>
{{ footer }}
<script type="text/javascript"><!--   
   var url_row= {{ url_row }};
   
   function addUrlMenu() {
   	html  = '<div id="url-row' + url_row+ '" class="form-group">';	
       html += '  <div class="col-sm-5">';
   	{% for language in languages %}
   	html += '    <div class="input-group">';
   	html += '      <span class="input-group-addon"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /> Text</span><input type="text" name="isotop_url[' + url_row+ '][name][{{ language['language_id'] }}]" value="" placeholder="{{ entry_name }}" class="form-control" />';
       html += '    </div>';
   	{% endfor %}
   	html += '  </div>';
   	html += '  <div class="col-sm-5">';
   	{% for language in languages %}
   	html += '    <div class="input-group">';
   	html += '      <span class="input-group-addon"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /> Link</span><input type="text" name="isotop_url[' + url_row+ '][url][{{ language['language_id'] }}]" value="" placeholder="{{ entry_url }}" class="form-control" />';
       html += '    </div>';
   	{% endfor %}
   	html += '  </div>';
       html += '  <div class="col-sm-2">';
   	html += '  <td class="text-left"><button type="button" onclick="$(\'#url-row' + url_row+ '\').remove();" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
   	html += '  </div>';	
   	html += '</div>';
   	$('#menu-url').append(html);
   	
   	url_row++;
   }
</script>