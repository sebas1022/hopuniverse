<div id="blog_home" class="menu-recent post-carousel">
	<div class="blog-title module-title">
		<h2>{{ text_headingtitle }}</h2>
		<p class="module-description">{{ text_subtitle }}</p>
	</div>
	{% set count, rows = 0, slide.rows %}
	{% if not rows %}
	{% set rows = 1 %}
	{% endif %}

	{% if articles %}
	<div class="post-carousel-inner owl-carousel owl-theme">
		{% for article in articles %}
		{% if count % rows == 0 %}
		<div class="row_items">
			{% endif %}
			{% set count = count + 1 %}
			<div class="post-content item-inner">
				<div class="post-thumb">
					<a href=" {{ article.href }}" class="post-image">
						<img src="{{ article.image }}" alt="{{ article.name }}"/>
					</a>
					<a class="readmore" href="{{ article.href }}">{{ button_read_more }}</a>
				</div>
				<div class="post-info">
					<h3 class="post-title"><a href="{{ article.href }}">{{ article.name }}</a></h3>
					<div class="post-meta">
						{% if article.author %}
						<div class="post-author">
							{% if article.author %}
							<span class="text">{{ text_post_by }}</span>
							{% endif %}		
							<span class="post-author">{{ article.author }}</span>
						</div>
						{% endif %}	
						<span class="separator"> - </span>						
						<div class="post-date">
							<span class="month">{{ article.date_added_m }}</span>
							<span class="day">{{ article.date_added_d }}, </span>
							<span class="year">{{ article.date_added_y }}</span>
						</div>
					</div>
					<div class="post-desc">{{ article.intro_text }}</div>
				</div>												
			</div>
			{% if (count % rows == 0) or (count == articles|length ) %}
		</div>
		{% endif %}
		{% endfor %}
	</div>
	{% else %}
	<p>{{ text_empty }}</p>
	{% endif %}

</div>
<script type="text/javascript">
	$(document).ready(function() {
		$(".post-carousel-inner").owlCarousel({
			autoPlay : {% if slide.auto %} true {% else %} false {% endif %},
			items : {{ slide['items'] }},
			margin: 30,
			loop: true,			
			navSpeed : {{ slide['speed'] }},
			dotsSpeed : {{ slide['speed'] }},
			autoplaySpeed : {{ slide['speed'] }},
			nav : {% if slide.navigation %} true {% else %} false {% endif %},
			dots : {% if slide.pagination %} true {% else %} false {% endif %},
			navText : ['<i class="ion-chevron-left"></i>','<i class="ion-chevron-right"></i>'],
			responsive:{
				0:{
					items: 1,
				},
				480:{
					items: 1,
				},
				640:{
					items: 2,
				},
				992:{
					items: 2,
				},
				1200:{
					items: {{ slide['items'] }}
				}
			}
		});
	});
</script>